<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NUnit.Maui.Runner"
             x:Class="NUnit.Maui.Runner.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Visual Elements -->
            <Style x:Key="defaultBackground" TargetType="VisualElement">
                <Setter Property="BackgroundColor" Value="#F7F7F7" />
            </Style>
            <Style x:Key="windowsBackground" TargetType="VisualElement">
                <Setter Property="BackgroundColor" Value="#000000" />
            </Style>

            <!-- Labels -->
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="#303030" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
